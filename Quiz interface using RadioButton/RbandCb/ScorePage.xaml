<Window x:Class="RbandCb.ScorePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RbandCb"
        mc:Ignorable="d"
        Title="ScorePage" Height="450" Width="800">
    <StackPanel>
        <TextBlock x:Name="tex1" Text="Congratulation for Completing your Test" 
                   FontSize="30" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,50,0,0" > </TextBlock>
        <TextBlock x:Name="tex2" Text="&quot;Your Total score is&quot;"  FontSize="25" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,10,0,0"></TextBlock>
        <TextBlock x:Name="texSc" Text="" HorizontalAlignment="Center" Margin="0,10,0,0" Foreground="Purple" 
                   FontSize="100" FontWeight="ExtraBold" > </TextBlock>
        
    </StackPanel>
</Window>
