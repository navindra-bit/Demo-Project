<Window x:Class="RbandCb.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RbandCb"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <ScrollViewer>
    <StackPanel >
        <TextBox x:Name="tl" Text="Question And Answer" Height="30" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold"> </TextBox>
        <TextBlock x:Name="tl2" Text=""  FontSize="20" FontWeight="Bold" Visibility="Hidden" ></TextBlock>
        <TextBlock Text="1. What does WPF stand for?" FontSize="15" ></TextBlock>
        <StackPanel Orientation="Vertical" Margin="20,10,0,0" >
            <RadioButton  Content="A) Windows Processing Framework" Tag="W" FontSize="15" Checked="RadioButton_Click" ></RadioButton>
            <RadioButton  Content="B) Windows Presentation Foundation" Tag="C" FontSize="15" Checked="RadioButton_Click"></RadioButton>
            <RadioButton  Content="C) Windows Programming Framework" Tag="W" FontSize="15" Checked="RadioButton_Click"></RadioButton>
            <RadioButton  Content="D) Windows Platform Foundation" Tag="W" FontSize="15" Checked="RadioButton_Click"></RadioButton>
        </StackPanel>

        <TextBlock Text="2. What is the shortcut key to build a project in Visual Studio?" FontSize="15" Margin="0,10,0,0" ></TextBlock>
        <StackPanel Orientation="Vertical" Margin="20,10,0,0">
            <RadioButton  Content="A) Ctrl + B" Tag="W" FontSize="15" Checked="RadioButton_Click"></RadioButton>
            <RadioButton  Content="B) Ctrl + Shift + B" Tag="C" FontSize="15" Checked="RadioButton_Click"></RadioButton>
            <RadioButton  Content="C) Ctrl + Alt + B" Tag="W" FontSize="15" Checked="RadioButton_Click"></RadioButton>
            <RadioButton  Content="D) Ctrl + F5" Tag="W" FontSize="15" Checked="RadioButton_Click"></RadioButton>
        </StackPanel>
            <TextBlock  Text="3. Which of the following is the main entry point of a WPF application?" FontSize="15" Margin="0,10,0,0" ></TextBlock>
        <StackPanel Orientation="Vertical" Margin="20,10,0,0" >
            <RadioButton  Content="A) App.xaml.cs" Tag="C" FontSize="15" Checked="RadioButton_Click"></RadioButton>
            <RadioButton  Content="B) Main.xaml.cs" Tag="W" FontSize="15" Checked="RadioButton_Click"></RadioButton>
            <RadioButton  Content="C) Startup.xaml" Tag="W" FontSize="15" Checked="RadioButton_Click"></RadioButton>
            <RadioButton  Content="D) Program.cs" Tag="W" FontSize="15" Checked="RadioButton_Click"></RadioButton>
        </StackPanel>
            <TextBlock Text="4. What is the default layout panel in WPF?" FontSize="15" Margin="0,10,0,0" ></TextBlock>
        <StackPanel Orientation="Vertical" Margin="20,10,0,0" >
            <RadioButton  Content="A) StackPanel" Tag="W" FontSize="15"  Checked="RadioButton_Click"></RadioButton>
            <RadioButton  Content="B) Grid" Tag="C" FontSize="15" Checked="RadioButton_Click"></RadioButton>
            <RadioButton  Content="C) Canvas" Tag="W" FontSize="15" Checked="RadioButton_Click"></RadioButton>
            <RadioButton  Content="D) DockPanel" Tag="W" FontSize="15" Checked="RadioButton_Click"></RadioButton>
        </StackPanel>
            <TextBlock Text="5. Which of the following is the entry point of a C# program?" FontSize="15" Margin="0,10,0,0"></TextBlock>
        <StackPanel Orientation="Vertical" Margin="20,10,0,0">
            <RadioButton  Content="A) Execute()" Tag="W" FontSize="15" Checked="RadioButton_Click"></RadioButton>
            <RadioButton  Content="B) Start()" Tag="W" FontSize="15" Checked="RadioButton_Click"></RadioButton>
            <RadioButton  Content="C) Begin()" Tag="W" FontSize="15" Checked="RadioButton_Click"></RadioButton>
            <RadioButton  Content="D) Main()" Tag="C" FontSize="15" Checked="RadioButton_Click"></RadioButton>

        </StackPanel>
            <TextBlock Height="40" Visibility="Hidden"></TextBlock>
            <Button x:Name="sm" Content="Submit" HorizontalAlignment="Center"  BorderThickness="0" Background="#0ba6ff" 
                    Height="40" Width="100" FontSize="20" FontWeight="Bold" Click="sm_Click"></Button>
            <TextBlock Height="40"></TextBlock>
 
    </StackPanel>
    </ScrollViewer>
</Window>
